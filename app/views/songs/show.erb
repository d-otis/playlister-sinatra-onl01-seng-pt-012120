
<div class="row">
	<div class="col-sm-6 offset-sm-3">
		<div class="card mb-3" style="">
			<div class="row no-gutters">
				<div class="col-md-4">
					<i class="fas fa-music fa-7x card-img m-4"></i>

				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title">"<%= @song.name %>"</h5>
<!-- 						<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
						<p class="card-text"><small class="text-muted"><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a> // <%= @genres.each.collect {|genre| genre.name.capitalize}.join(", ") %></small></p>
						<a href="/songs/<%= @song.slug %>/edit" class="btn btn-secondary btn-sm">Edit Song</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
